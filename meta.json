{
    "prompts": [
        {
            "name": "name",
            "type": "input",
            "message": "项目名称："
        },
        {
            "name": "router",
            "type": "confirm",
            "message": "Install vue-router?",
            "default": true
        },
        {
            "name": "prerender",
            "type": "confirm",
            "message": "是否开启预渲染模式?",
            "default": true
        },
        {
            "name": "webpack",
            "type": "confirm",
            "message": "是否webpack4版本打包?",
            "default": true
        }
    ],
    "filters": {
        "src/router/**/*": "router",
        "src/container/**/*": "router"
    }
}
